@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "";
}

<style>
    body {
        background-image: url('@Url.Content("~/img/confirmBG.jpg")');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
    }
    label {
        @*color: #093971;
        *@ color: white;
        font-size: 1.1rem;
    }
    .confirmMsg {
        color: white;
        text-align: center;
    }
    .card-content {
        width: auto;
        padding: 0 7rem 2rem 7rem;
        font-weight: 700;
    }
    .short-msg {
        font-family: 'Tangerine', cursive;
        font-size:2rem;
        color: black;
    }

    .soci-row-posi{
        margin-left:2.4rem;
    }
    .social .soc-container {
        text-align: center;
    }

    .social .soc-container ul {
        float: left;
    }

    .social .soc-container ul li {
        float: left;
        padding-left: 10px;
        list-style-type: none;
    }
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>INTEX 2021 Group 2-1</title>
    <link rel="shortcut icon" href="img/byu-favicon.ico">
    <!-- Bootstrap CSS https://getbootstrap.com/docs/4.6/getting-started/introduction/ -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <!-- Style.css -->
    @*<link rel="stylesheet" href="css/style.css">*@
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Plugins.css -->
    <link href="~/css/plugins.css" rel="stylesheet">
    <!-- Google Fonts https://fonts.google.com/ -->
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <!-- Animate.css https://cdnjs.com/libraries/animate.css/
        https://daneden.github.io/animate.css/ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Lightbox Image Gallery https://cdnjs.com/libraries/lightbox2  https://lokeshdhakar.com/projects/lightbox2/ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css">
    <!-- Owl Carousel https://cdnjs.com/libraries/OwlCarousel2
        http://owlcarousel2.github.io/OwlCarousel2/ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Tangerine:wght@700&display=swap" rel="stylesheet">
</head>
<br />
<br />
<br />
<br />

<div class="col-md-3"></div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="card mb-3 col-md-6 card-main">
        <img class="card-img-top" src="~/img/email-1.jpg" alt="Card image cap">
        <div class="card-body" style="background-color:ghostwhite">
            <h1 class="card-title">Email Confirmation!</h1>
            <p class="card-text card-content p">Just one more step from accessing thousands of mummy records! Click to confirm your registration.</p>
            <a href="https://mail.google.com/" class="btn btn-primary btn-md" role="button" target="_blank" aria-pressed="true">Verify Email</a>
            <br />
            <br />
            <h1 class="short-msg">Stay in touch</h1>
        </div>
    </div>

    <div class="col-md-3"></div>
</div>

<div class="row">
    <div class="col-5"></div>
    <div class="col-2 soci-row-posi">
        <div class="social">
            <div class="soc-container">
                <ul>
                    <li>
                        <a class="fa-layers fa-3x" href="url" target="_blank">
                            <i class="fab fa-facebook"></i>
                        </a>
                    </li>
                    <li>
                        <a class="fa-layers fa-3x" href="url" target="_blank">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a class="fa-layers fa-3x" href="url" target="_blank">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-5"></div>
</div>


