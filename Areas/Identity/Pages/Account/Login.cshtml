<div class="row">
    <div class="col-md-4">
    </div>

    <div class="col-md-4">
        <div class="card-heading"></div>
        <div class="card-body">
            <div>
                <h1 class="title">Log in with your account</h1>
            </div>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <p>
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>

                            <a class="bt-pl" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                            <a class="bt-pl" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a New Account</a>
                        </p>
                    </div>
                </div>
                <div class="buttonHolder">
                    <button type="submit" class="btn btn--pill btn--green">Log in</button>
                </div>

            </form>
        </div>

