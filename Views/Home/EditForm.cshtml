@{
    ViewBag.Title = "Edit A Record";
}

@*@model DigginPharoh.Models.ViewModels.IndexViewModel*@
@model DigginPharoh.Models.Burial


<input type="hidden" id="Preserve" value="@ViewBag.burialToEdit.Preservation" />


<form asp-action="BurialSummary" method="post">
    <input type="hidden" asp-for="Burial_Id" value="@ViewBag.burialToEdit.Burial_Id" />
    <div>
        <label asp-for="Burial_Id">Burial ID</label>
        <input asp-for="Burial_Id" value="@ViewBag.burialToEdit.Burial_Id" required />
    </div>

    <div>
        <label asp-for="burial_depth">Depth</label>
        <input asp-for="burial_depth" value="@ViewBag.burialToEdit.burial_depth" />
    </div>

    <div>
        <label asp-for="Sex_Gender_GE">Sex (Giles Elliot)</label>
        <select id="SexGeSelect">
            <option value=null>Select</option>
            <option value="Female">Female</option>
            <option value="Male">Male</option>
            <option value="SubAdult">SubAdult</option>
            <option value="Unknown">Unknown</option>
        </select>
    </div>

    <div>
        <label asp-for="gender_body_col">Sex (Other)</label>
        <select id="SexOSelect">
            <option value=null>Select</option>
            <option value="Female">Female</option>
            <option value="Male">Male</option>
            <option value="Undetermined">Undetermined</option>
        </select>
    </div>

    <div>
        <label asp-for="head_direction">Head Direction</label>
        <select id="HeadSelect">
            <option value=null>Select</option>
            <option value="East">East</option>
            <option value="West">West</option>
        </select>
    </div>

    <div>
        <label asp-for="Preservation">Preservation</label>
        <select id="PreserveSelect">
            <option value=null>Select</option>
            <option value="Excellent (V)">Excellent (V)</option>
            <option value="Good (IV)">Good (IV)</option>
            <option value="Average (III)">Average (III)</option>
            <option value="Fair (II)">Fair (II)</option>
            <option value="Poor (I)">Poor (I)</option>
        </select>
    </div>

    <div>
        <label asp-for="year_found">Year Found</label>
        <input asp-for="year_found" value="@ViewBag.burialToEdit.year_found" />
    </div>


    <button type="submit">Submit Your New Record</button>

    <div asp-validation-summary="All"></div>
</form>

<p>Looking for the Edit Page with all the Details? <a type="button" asp-controller="Home" value="EditFormTransfer" asp-action="EditFormTransfer" asp-route-id="@ViewBag.burialToEdit.Burial_Id"> Click Here!</a></p>
<br />


<input type="hidden" id="Preserve" value="@ViewBag.burialToEdit.Preservation" />
<input type="hidden" id="headdirection" value="@ViewBag.burialToEdit.head_direction" />
<input type="hidden" id="SexGe" value="@ViewBag.burialToEdit.Sex_Gender_GE" />
<input type="hidden" id="SexO" value="@ViewBag.burialToEdit.gender_body_col" />

@section Scripts {
    <script src="~/js/select.js"></script>
}