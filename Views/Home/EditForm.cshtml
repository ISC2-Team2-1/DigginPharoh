@{
    Layout = "_Layout_Summary";
}

@*@model DigginPharoh.Models.ViewModels.IndexViewModel*@
@model DigginPharoh.Models.Burial
<head>
    <!-- External css  -->
    <link href="~/css/spForm/style.css" rel="stylesheet" />
    <link href="~/css/spForm/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Plugins.css -->
    <link href="~/css/plugins.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
</head>

<style>
    body {
        font-family: 'Lato', sans-serif;
        background-image: url('@Url.Content("~/img/body-bg.jpg")');
    }

    h2 {
        color: #4966B1;
        font-weight: 400;
        font-size: 2rem;
        letter-spacing: .2rem;
        text-shadow: 0.1rem 0.1rem 0.2rem black;
        text-align: center;
        letter-spacing: .1rem;
        text-transform: uppercase;
    }

    label {
        display: inline-block;
        margin-bottom: .5rem;
        font-size: 1.1rem;
        font-weight: 700;
    }
</style>

<body>
    <hr />
    <div class="main">
        <div class="container">
            <form asp-action="BurialSummary" method="post" class="appointment-form" id="appointment-form">
                <h2>Edit your record here</h2>

                <input type="hidden" asp-for="Burial_Id" value="@ViewBag.burialToEdit.Burial_Id" />

                <div class="form-group-1">
                    <div class="select-list">
                        <label asp-for="Burial_Id">Burial ID</label>
                        <input asp-for="Burial_Id" value="@ViewBag.burialToEdit.Burial_Id" type="text" required />
                    </div>

                    <div class="select-list">
                        <label asp-for="burial_depth">Depth</label>
                        <input asp-for="burial_depth" value="@ViewBag.burialToEdit.burial_depth" type="text" />
                    </div>

                    <div class="select-list">
                        <label asp-for="Sex_Gender_GE">Sex (Giles Elliot)</label>
                        <select id="SexGeSelect">
                            <option value=null>Select</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                            <option value="SubAdult">SubAdult</option>
                            <option value="Unknown">Unknown</option>
                        </select>
                    </div>

                    <div class="select-list">
                        <label asp-for="gender_body_col">Sex (Other)</label>
                        <select id="SexOSelect">
                            <option value=null>Select</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                            <option value="Undetermined">Undetermined</option>
                        </select>
                    </div>
                </div>

                <div class="form-group-2">

                    <div class="select-list">
                        <label asp-for="head_direction">Head Direction</label>
                        <select id="HeadSelect">
                            <option value=null>Select</option>
                            <option value="East">East</option>
                            <option value="West">West</option>
                        </select>
                    </div>

                    <div class="select-list">
                        <label asp-for="Preservation">Preservation</label>
                        <select id="PreserveSelect">
                            <option value=null>Select</option>
                            <option value="Excellent (V)">Excellent (V)</option>
                            <option value="Good (IV)">Good (IV)</option>
                            <option value="Average (III)">Average (III)</option>
                            <option value="Fair (II)">Fair (II)</option>
                            <option value="Poor (I)">Poor (I)</option>
                        </select>
                    </div>

                    <div class="select-list">
                        <label asp-for="year_found">Year Found</label>
                        <input asp-for="year_found" value="@ViewBag.burialToEdit.year_found" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-submit">
                        <button type="submit" name="submit" id="submit" class="submit">Update Record</button>
                    </div>

                    <div class="form-submit">
                        <button type="submit" name="submit" id="submit" class="more" asp-controller="Home" value="EditFormTransfer" asp-action="EditFormTransfer" asp-route-id="@ViewBag.burialToEdit.Burial_Id">More Details</button>
                    </div>

                    <div class="form-submit">
                        <button type="submit" name="submit" id="submit" class="return" onclick="history.back()">Cancel</button>
                    </div>
                </div>

                <div asp-validation-summary="All"></div>
            </form>
        </div>
    </div>

    <p>Looking for the Edit Page with all the Details? Click "More Details"!</p>
    <br />

    <script src="~/css/spForm/main.js"></script>
    <script src="~/css/spForm/jquery.min.js"></script>
</body>

<input type="hidden" id="Preserve" value="@ViewBag.burialToEdit.Preservation" />
<input type="hidden" id="headdirection" value="@ViewBag.burialToEdit.head_direction" />
<input type="hidden" id="SexGe" value="@ViewBag.burialToEdit.Sex_Gender_GE" />
<input type="hidden" id="SexO" value="@ViewBag.burialToEdit.gender_body_col" />

@section Scripts {
    <script src="~/js/select.js"></script>
}
