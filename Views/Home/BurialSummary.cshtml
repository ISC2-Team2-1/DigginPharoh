@{
    Layout = "_Layout";
}
@model DigginPharoh.Models.ViewModels.IndexViewModel

<br />
<br />

<head>
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Plugins.css -->
    <link href="~/css/plugins.css" rel="stylesheet">
    <!-- Google Fonts https://fonts.google.com/ -->
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <!-- Animate.css https://cdnjs.com/libraries/animate.css/
    https://daneden.github.io/animate.css/ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Lightbox Image Gallery https://cdnjs.com/libraries/lightbox2  https://lokeshdhakar.com/projects/lightbox2/ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css">
    <!-- Owl Carousel https://cdnjs.com/libraries/OwlCarousel2
    http://owlcarousel2.github.io/OwlCarousel2/ -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
</head>

<h1 class="BurialH1">Burial Summary</h1>

<h4>Data Hilights Below</h4>>
<hr />

<div class="row">
    <div class="col-md-1">
        <!--Filters go here-->
    </div>
    <div class="col-md-11">

        <div class="h-75 d-inline-block">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Burial ID</th>
                        <th scope="col">Depth</th>
                        <th scope="col">Sex</th>
                        <th scope="col">Head Direction</th>
                        <th scope="col">Preservation</th>
                        <th scope="col">Year Found</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.BurialList)
                    {
                        <tr>

                            <th scope="row">@x.Burial_Id</th>
                            <td>@x.burial_depth cm.</td>
                            <td>@x.Sex_Gender_GE @x.gender_body_col</td>
                            <td>@x.head_direction</td>
                            <td>@x.Preservation</td>
                            <td>@x.year_found</td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div page-model="@Model.PagingInfo" page-action="BurialSummary"
     page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1">
</div>