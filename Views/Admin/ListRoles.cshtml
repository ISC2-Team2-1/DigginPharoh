@{
    Layout = "_Layout_Summary";
}

@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<style>
    body{
        background-image: url('@Url.Content("~/img/adminRole.jpg")');
    }

    .col-lg-4 {
       text-align: center;
       font-weight: 700;
       text-transform: uppercase;
       margin-top: 5.5rem;

    }

    .h1s {
        margin-top: 6.2rem;
        color: white;
        font-weight: 400;
        font-size: 2.5rem;
        letter-spacing: .2rem;
        text-shadow: 0.1rem 0.1rem 0.2rem black;
        text-align: center;
        letter-spacing: .1rem;
        text-transform: uppercase;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
            <h1 class="h1s">Admin Console</h1>
            <hr />
        </div>
        <div class="col-lg-3">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            foreach (var role in Model)
            {
                <div class="col-lg-4">

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@role.Name Privileges</h5>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="admin" asp-action="EditRole"
                               asp-route-id="@role.Id" class="btn btn-primary">
                                View User Access
                            </a>
                        </div>
                    </div>

                    @*@else
                    {
                        <div class="card">
                            <div class="card-header">
                                No roles created yet
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    Use the button below to create a role
                                </h5>
                                <a class="btn btn-primary" style="width:auto"
                                   asp-controller="administration" asp-action="CreateRole">
                                    Create Role
                                </a>
                            </div>
                        </div>
                    }*@

                </div>
            }
        }

        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">List of Registered Users</h5>
                </div>
                <div class="card-footer">
                    <a asp-action="ManageUser" asp-controller="admin" class="btn btn-primary">
                        View Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


